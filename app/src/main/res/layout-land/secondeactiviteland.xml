<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond2"
    >


    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/boutonAccord1"
        android:background="@drawable/bt1"
        android:textColor="#F5FFFF"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/boutonAccord2"
        android:textColor="#F5FFFF"
        android:background="@drawable/ic_bt2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>


    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/boutonAccord3"
        android:textColor="#F5FFFF"
        android:background="@drawable/ic_bt3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/boutonAccord4"
        android:textColor="#F5FFFF"
        android:background="@drawable/ic_bt4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="22dp"
        />
</RelativeLayout>