<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fond"
    tools:context="robot.org.boiteameuh.MainActivity" >

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/boutonTonalité"
        android:text="Tonalité"
        android:backgroundTint="#3F5E8C"
        android:background="@drawable/border"
        android:textColor="#F5FFFF"
        android:clickable="true"


        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/boutonAccords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
     android:layout_width="100dp"
     android:layout_height="50dp"
     android:id="@+id/boutonAccords"
     android:text="Progression"
        android:background="@drawable/border"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="#3F5E8C"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/boutonTonalité"
        android:layout_alignStart="@+id/boutonTonalité" />

    <EditText
        android:id="@+id/texteTonalité"
        android:background="@drawable/editvue1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:editable="false"
        android:layout_alignTop="@+id/boutonTonalité"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <EditText
        android:id="@+id/texteAccords"
        android:background="@drawable/editvue1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:editable="false"
        android:gravity="center"

        android:layout_above="@+id/boutonTonalité"
        android:layout_alignLeft="@+id/texteTonalité"
        android:layout_alignStart="@+id/texteTonalité" />


    <Switch
        android:text="Mode mineur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:layout_below="@+id/boutonTonalité"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/music"
        android:id="@+id/lecture"
        android:onClick="test"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
