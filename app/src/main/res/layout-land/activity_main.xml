<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="robot.org.boiteameuh.MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/boutonTonalité"
        android:text="Tonalité"
        android:backgroundTint="#3F5E8C"
        android:background="@drawable/border"
        android:textColor="#F5FFFF"
        android:clickable="true"


        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/boutonAccords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
     android:layout_width="100dp"
     android:layout_height="50dp"
     android:id="@+id/boutonAccords"
     android:text="Accords"
        android:background="@drawable/border"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="#3F5E8C"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/boutonTonalité"
        android:layout_alignStart="@+id/boutonTonalité" />

    <EditText
        android:id="@+id/texteTonalité"
        android:background="@drawable/editvue1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:editable="false"
        android:layout_alignTop="@+id/boutonTonalité"
        android:layout_toRightOf="@+id/majeur"
        android:layout_toEndOf="@+id/majeur"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <EditText
        android:id="@+id/texteAccords"
        android:background="@drawable/editvue1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:editable="false"
        android:gravity="center"

        android:layout_above="@+id/boutonTonalité"
        android:layout_alignLeft="@+id/texteTonalité"
        android:layout_alignStart="@+id/texteTonalité" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/majeur"
        android:text="Majeur"
        android:background="@drawable/border"
        android:textColor="#F5FFFF"
        android:backgroundTint="#3F5E8C"
        android:layout_alignBaseline="@+id/mineur"
        android:layout_alignBottom="@+id/mineur"
        android:layout_alignLeft="@+id/boutonTonalité"
        android:layout_alignStart="@+id/boutonTonalité" />

    <Button
        android:id="@+id/mineur"
        android:text="Mineur"
        android:background="@drawable/border"
        android:textColor="#F5FFFF"
        android:backgroundTint="#3F5E8C"
        android:clickable="true"

        android:layout_height="50dp"
        android:layout_width="100dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/texteTonalité"
        android:layout_alignEnd="@+id/texteTonalité"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/lecture"
        android:background="@drawable/boutonrond"
        android:id="@+id/lecture"
        android:onClick="test"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
